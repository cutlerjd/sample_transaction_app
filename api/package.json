{
  "name": "typescript-express",
  "version": "0.0.0",
  "private": true,
  "main": "./dist/app.js",
  "scripts": {
    "prebuild": "tslint -c tslint.json -p tsconfig.json",
    "build": "tsc",
    "prestart": "npm run build",
    "start": "node ./dist/app.js",
    "predebug": "npm run build",
    "debug": "node --inspect=0.0.0.0:9229 ./dist/app.js",
    "start:watch": "nodemon",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "~4.16.0",
    "pg": "^7.11.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.25"
  },
  "devDependencies": {
    "@types/express": "^4.16.1",
    "@types/node": "^11.11.4",
    "nodemon": "^1.18.10",
    "ts-node-dev": "^1.0.0-pre.32",
    "typescript": "^3.3.4000",
    "tslint": "^5.16.0"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm run debug",
    "ext": "ts"
  }
}
